{
  "compilerOptions": {
    /* Basic Options */
    "target": "es2015",
    "module": "commonjs",
    "declaration": true,
    "declarationDir": "./typings",
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "./dist",
    /* Strict Type-Checking Options */
    "strict": true,
    /* Additional Checks */
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    /* Module Resolution Options */
    "esModuleInterop": true
  },
  "include": [
    "./src/**/*"
  ]
}